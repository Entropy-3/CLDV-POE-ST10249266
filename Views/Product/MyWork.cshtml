<br />

    @if (Model == null)
    {
        <p>No products to display.</p>
    }
    else
    {
        @foreach (var product in Model)
        {
            <div class="product">
                <img src="@product.Image" alt="@product.Name">
                <h2>@product.Name</h2>
                <p>@product.Price</p>
                <!-- Add other product details as needed -->
            </div>

            <div style="font-weight:bold; background-color: rgba(255, 255, 255, 0.8); padding: 10px; border-radius: 20px;">

                <div style="display: flex; align-items: center;">
                    <img src="@product.Image" width="400" height="400" style="margin-right: 20px;">
                    <h2>@product.Name</h2>
                    <p style="font-weight:bold;">
                        @product.Description
                    </p>
                </div>
            </div>
        }
    }
    

